{
    "name" : "Python 3.13 with uv",
    "image": "mcr.microsoft.com/devcontainers/base",
    "features": {
        "ghcr.io/devcontainers/features/python": {
            "version": "3.13"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-vscode.cpptools"
            ]
        }
    },

    "onCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh"
}
